<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#303040">

    <!--<FrameLayout-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:id="@+id/layout"-->
        <!--android:background="#ffe9fffd">-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/ipAddr" android:layout_width="174dp"
                    android:layout_height="59dp"
                    android:id="@+id/textView"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textIsSelectable="false"
                    android:textColor="#AFDEFE"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="left|top" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#AFDEFE"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/app_name"
                        android:id="@+id/textView2"
                        android:layout_gravity="center_horizontal|top"
                        android:textSize="48sp"

                        android:layout_marginRight="15dp" />


                    <Button
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add_new_light"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/button_add_new_light"
                        android:layout_gravity="left|top"
                        android:textSize="50dp"
                        android:background="#AFDEFE"
                        android:textColor="#303040" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ListView
                    android:id="@+id/list"

                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#AFDEFE">
                </ListView>
            </RelativeLayout>
        </LinearLayout>


    <!--</FrameLayout>-->

</FrameLayout>
