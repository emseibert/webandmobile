<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs4720.virginia.cs.edu.piapp.AddLightShow"
    android:id="@+id/add_pattern_view">

    <!--<cs4720.virginia.cs.edu.piapp.LightStrip
        android:id="@+id/seekBar0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:max="100"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:progress="0"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/seek_thumb_normal"
        android:thumbOffset="12dp"/>-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <org.apmem.tools.layouts.FlowLayout
            xmlns:f="http://schemas.android.com/apk/res/cs4720.virginia.cs.edu.piapp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            f:horizontalSpacing="30dip"
            android:id="@+id/flowlayout">


        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btn_color1"
            android:background="#ff124dff"
            android:layout_gravity="bottom"

            />

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btn_color2"
                android:layout_marginLeft="30dp"
                android:background="#ffff4e38"
                android:layout_gravity="bottom"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_color3"
            android:background="#ff5aff37"


            android:layout_gravity="bottom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_add_color"
            android:background="#ffa3a3a1"
            android:layout_gravity="bottom"

            android:text="+"
            android:textSize="40sp" />
    </org.apmem.tools.layouts.FlowLayout>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Racing Colors"
                android:id="@+id/chkBx_Racing"
                android:checked="false"
                android:textSize="40sp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal" />

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blinking Colors"
                android:id="@+id/chkBx_Blinking"
                android:checked="false"
                android:textSize="40sp"
                android:layout_gravity="center_horizontal"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Randomize"
                android:id="@+id/chkBx_Randomize"
                android:checked="false"
                android:textSize="40sp"
                android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btn_Cancel"
                    android:textSize="40sp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save As..."
                        android:id="@+id/btn_Save"
                        android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
